@model GaleriaArte.Models.preguntasModel

<h2>Responde tus preguntas de seguridad</h2>

@if (!string.IsNullOrEmpty(ViewBag.Msm))
{
    <div class="alert alert-danger">@ViewBag.Msm</div>
}

<form asp-controller="Login" asp-action="ValidarRespuestas" method="post">
    <input type="hidden" name="UserId" value="@Model.UserId" />

    <div class="mb-3">
        <label class="form-label">@Model.Question1</label>
        <input type="hidden" name="Question1" value="@Model.Question1" />
        <input type="text" class="form-control" name="Answer1" required>
    </div>

    <div class="mb-3">
        <label class="form-label">@Model.Question2</label>
        <input type="hidden" name="Question2" value="@Model.Question2" />
        <input type="text" class="form-control" name="Answer2" required>
    </div>

    <button type="submit" class="btn btn-primary">Validar</button>
</form>
