@model List<GaleriaArte.Models.historial_exposicion >

@{
    ViewData["Title"] = "Historial de Exposiciones";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>


<h2>@ViewData["Title"]</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id Historial</th>
            <th>Id Exposición</th>
            <th>Usuario Modificación</th>
            <th>Fecha Modificación</th>
            <th>Detalles</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.id_historial</td>
                <td>@item.id_exposicion</td>
                <td>@item.usuario_modificacion</td>
                <td>@item.fecha_modificacion.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@item.detalles</td>
            </tr>
        }
    </tbody>
</table>
