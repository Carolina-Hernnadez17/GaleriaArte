@model GaleriaArte.Models.exposicion
@{
    ViewBag.Title = Model?.id_exposicion == 0 ? "Agregar Exposición" : "Editar Exposición";
    var locaciones = ViewBag.Locaciones as List<GaleriaArte.Models.locacion>;
    var obras = ViewBag.Obras as List<GaleriaArte.Models.obra>;
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-header bg-primary text-white text-center rounded-top-4">
            <h3>@ViewBag.Title</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm(Model?.id_exposicion == 0 ? "AgregarExposicion" : "EditarExposicion", "Exposicion", FormMethod.Post))
            {
                @Html.HiddenFor(m => m.id_exposicion)

                <div class="mb-3">
                    <label class="form-label">Título de la Exposición</label>
                    @Html.TextBoxFor(m => m.titulo_exposicion, new { @class = "form-control", required = "required", placeholder = "Ingrese el título" })
                </div>

                <div class="mb-3">
                    <label class="form-label">Descripción</label>
                    @Html.TextAreaFor(m => m.descripcion, new { @class = "form-control", rows = 3, required = "required", placeholder = "Descripción de la exposición" })
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Fecha de Inicio</label>
                        @Html.TextBoxFor(m => m.fecha_inicio, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control", required = "required" })
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Fecha de Cierre</label>
                        @Html.TextBoxFor(m => m.fecha_cierre, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control", required = "required" })
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Locación</label>
                        @Html.DropDownListFor(m => m.id_locacion, new SelectList(locaciones, "id_Locacion", "ciudad"), "Seleccione una locación", new { @class = "form-select", required = "required" })
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Obra Asociada</label>
                        @Html.DropDownListFor(m => m.id_obra, new SelectList(obras, "id_obra", "titulo"), "Seleccione una obra", new { @class = "form-select", required = "required" })
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a href="@Url.Action("Exposiciones_Admin", "Exposicion")" class="btn btn-secondary rounded-3 px-4">Cancelar</a>
                    <button type="submit" class="btn btn-success rounded-3 px-4">Guardar</button>
                </div>
            }
        </div>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
            @ViewBag.Error
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
</div>
