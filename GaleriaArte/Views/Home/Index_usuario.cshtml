@model IEnumerable<obra>

@{
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h1>Bienvenido a la sección de Usuario</h1>
<p>Contenido de la página principal de usuario...</p>


<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Expo - Renaissance Portrait Masters</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/Site.css" />

    <style>

        .hero-section {
            padding: 4rem 2rem;
            position: relative;
        }

        .hero-section .hero-title {
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 1rem;
        }

        .hero-section .hero-date {
            font-size: 1.1rem;
            margin-bottom: 1.5rem;
        }

        .btn-presale {
            background-color: transparent;
            border: 1px solid #fff;
            color: #fff;
            padding: 0.5rem 1.5rem;
            border-radius: 25px;
            text-transform: uppercase;
            transition: all 0.3s ease;
        }

        .btn-presale:hover {
            background-color: #fff;
            color: #111;
        }

        .events-section {
            padding: 3rem 2rem;
        }

        .events-section h2 {
            margin-bottom: 2rem;
            font-weight: bold;
        }

        .event-card {
            background-color: #222;
            border: none;
            margin-bottom: 1.5rem;
        }

        .event-card .card-img-top {
            height: 180px;
            object-fit: cover;
        }

        .event-card .card-body {
            color: #fff;
        }

        .event-card .event-date {
            font-size: 0.9rem;
            color: #aaa;
        }

        .event-card .event-views {
            font-size: 0.9rem;
            color: #aaa;
        }

        .newsletter-section {
            padding: 3rem 2rem;
            background-color: #1a1a1a;
        }

        .newsletter-section h3 {
            margin-bottom: 1rem;
        }

        .newsletter-section .form-control {
            background-color: #333;
            border: 1px solid #444;
            color: #fff;
        }

        .newsletter-section .btn-newsletter {
            background-color: #5cff47;
            color: #111;
            font-weight: bold;
            border: none;
            padding: 0.6rem 1.5rem;
            margin-top: 1rem;
        }

        .newsletter-section .btn-newsletter:hover {
            background-color: #4acc3a;
        }

        .newsletter-section .form-check-label {
            color: #ccc;
        }

        body {
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            align-items: stretch;
            min-height: 100vh;
            margin: 0;
            padding: 0;
        }

        .listado-obras {
            display: flex;
            flex-direction: column;
            align-items: stretch;
            width: 100%;
        }

        .categorias {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 10px;
            margin-bottom: 20px;
        }

        .categoria-pill {
            background-color: #e3f2fd;
            border: 1px solid #90caf9;
            color: #1565c0;
            border-radius: 50px;
            padding: 10px 20px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .categoria-pill:hover {
                background-color: #bbdefb;
                color: #0d47a1;
            }

        .buscador {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }

            .buscador input {
                width: 50%;
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 25px;
                outline: none;
                transition: box-shadow 0.3s ease;
            }

                .buscador input:focus {
                    box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
                }

        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            display: flex;
            flex-direction: column;
            margin-bottom: 20px;
            height: 100%;
            position: relative;
            overflow: hidden;
        }

            .card:hover {
                transform: scale(1.05);
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
            }

        .card-img-top {
            width: 100%;
            height: 250px;
            object-fit: cover;
            border-radius: 15px 15px 0 0;
        }

        .card-body {
            padding: 15px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .card-title {
            font-size: 1.1rem;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .card-text {
            font-size: 0.9rem;
            margin-bottom: 10px;
        }

        .estado-disponible {
            color: green;
            font-weight: bold;
        }

        .estado-no-disponible {
            color: red;
            font-weight: bold;
        }

        .disabled-card {
            opacity: 0.6;
            cursor: not-allowed;
        }

    </style>
</head>
<body>

    <!-- Sección Principal -->
    <div class="container-fluid bg-black text-white py-5 position-relative">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 position-relative">
                    <div class="position-relative">
                        <a >
                            <img src="https://i.ibb.co/7tNxT0Ms/6ad302131a8fd46d56e471fae7f79921.jpg" 
                            alt="6ad302131a8fd46d56e471fae7f79921" border="0" class="img-fluid rounded shadow-lg" style="width: 50%">
                        </a>
                        <a>
                            <img src="https://i.ibb.co/KchmxgLk/6418e6b0164f9cb61d4ba8a5b9bce947.jpg" 
                            class="superpuesta img-fluid rounded shadow position-absolute top-50 start-50 translate-middle"
                            style="width: 50%; border: 5px solid white;" alt="Segunda Imagen" border="0">
                        </a>
                    </div>
                </div>
                <div class="col-md-6">
                    <h1 class="display-4 fw-bold">¡Bienvenido !</h1>
                    <p class="text-success"> Galería de Arte</p>
                    <p>En esta galeria tendras varias opciones como usuario, puedes: publicar tus obras y ofertar por obras de 
                        otrsos usuarios y ver donde seran las nuevas exposiciones de arte.</p>
                    <button class="btn btn-outline-success" onclick="location.href='#panel-administrador'">Ir a ver obras</button>

                </div>

            </div>
        </div>
    </div>

    <section id="panel-administrador" class="events-section container">
        
            
    </section>

    <section class="newsletter-section">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h3>Newsletter Sign Up</h3>
                    <p>Enter your email address</p>
                    <form>
                        <div class="mb-3">
                            <input type="email" class="form-control" placeholder="you@example.com" />
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="termsCheck">
                            <label class="form-check-label" for="termsCheck">
                                Acepto los términos y condiciones
                            </label>
                        </div>
                        <button type="submit" class="btn btn-newsletter">Suscribirse</button>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
