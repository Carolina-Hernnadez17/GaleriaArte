@model obra

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalle de @Model.titulo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <link href="~/css_E/cssDetalleObra.css" rel="stylesheet" />
</head>
<body>
   
    <div class="section-inicio">
        <h2 class="texto-ver-obra "></h2>

    </div>
    <h1 class="descripcion">Destalles de la obra</h1>
    <div class="container ">
        
        <div class="container-img align-content-center">
            
            <div class="row justify-content-center">
                <div class="col-md-4">
                    <img src="@Model.imagen_url" class="img-fluid rounded shadow"
                         onerror="this.onerror=null; this.src='/images/default-art.jpg';">
                </div>
                <div class="col-md-4 texto-detalle">
                    <h1 class="titulo-detalle">@Model.titulo</h1>
                    <h4><strong>Artista: </strong> @Model.nombre_artista</h4>
                    <h5><strong>Estilo: </strong> @Model.estilo_arte</h5>
                    <p><strong>Precio: </strong> $@Model.precio.ToString("N2")</p>
                    <p><strong>Año de creación:</strong> @Model.ano_creacio</p>
                    <p><strong>Descripción: </strong> @Model.descripcion</p>
                    <p>
                        <strong>Estado:</strong>
                        <span class="@(Model.estado == 1 ? "text-success" : "text-danger")">
                            @(Model.estado == 1 ? "Disponible" : "No Disponible")
                        </span>
                    </p>
                    <a href="@Url.Action("ObrasUSer", "ObrasArte")" class="btn btn-primary">Volver al Listado</a>
                </div>
            </div>
        </div>
        <div class="espacio">
            <p>.</p>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
