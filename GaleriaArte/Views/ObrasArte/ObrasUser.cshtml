@model IEnumerable<obra>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<div class="container">
    @if (Model == null)
    {
        <p>El modelo es nulo.</p>
    }
    else
    {
        <div class="carousel-inner">
            
            @foreach (var obra in Model)
            {
                <div class="carousel-item"  data-bs-interval="10000">
                    <img src="@Url.Content(obra.imagen_url ?? "~/images/default.jpg")" class="d-block w-100" alt="@obra.titulo">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Titulo: @obra.titulo</h5>
                        <p>Descripción: @obra.descripcion</p>
                        <p>Nombre del artista: @obra.nombre_artista</p>
                        <p>Estado: @obra.estado</p>
                    </div>
                </div>
                
            }
        </div>

    }
</div>